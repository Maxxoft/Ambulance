<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="true">
    <layer-list>
      <item >
        <shape>
          <corners android:radius="30dp" />

          <solid android:color="#E0E0E0" />
        </shape>
      </item>
      <item android:bottom="3dp" android:left="3dp" android:top="3dp" android:right="3dp">
        <shape>
          <corners android:radius="30dp" />
          <shadow></shadow>
          <gradient android:angle="270" android:endColor="#EE0000" android:startColor="#BC0000" />

          <stroke android:width="3dp" android:color="#FFFFFF" />

        </shape>
      </item>
    </layer-list>
  </item>
  <item>
    <layer-list>
      <item >
        <shape>
          <corners android:radius="30dp" />

          <solid android:width="0dp"  android:color="#D3D3D3"  android:padding="1dp"/>
          <stroke android:width="1dp" android:color="#65D72C" android:padding="1dp"/>
          <stroke android:width="2dp" android:color="#E4E6E6" android:padding="-1dp"/>

        </shape>
      </item>
      <item android:bottom="3dp" android:left="3dp" android:top="3dp" android:right="3dp">
        <shape>
          <corners android:radius="30dp" />
          <shadow></shadow>
          <gradient android:angle="-90" android:endColor="#BC0000" android:startColor="#DE0000" />
          EEEEEE
          <stroke android:width="3dp" android:color="#FFFFFF" />

        </shape>
      </item>
    </layer-list>
  </item>


</selector>
