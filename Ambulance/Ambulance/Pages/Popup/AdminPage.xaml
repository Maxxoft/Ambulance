<?xml version="1.0" encoding="utf-8" ?>
<Popup:PopupPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="Ambulance.Pages.Popup.AdminPage"
    xmlns:Popup="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
    xmlns:ExtendedControls="clr-namespace:Ambulance.ExtendedControls">

    <StackLayout HorizontalOptions="Center" VerticalOptions="CenterAndExpand" BackgroundColor="{StaticResource ColoredPanel}" WidthRequest="200">
        <Label Text="Введите пароль" HorizontalOptions="Center" FontSize="Medium"/>
        <ExtendedControls:RoundedCornerEditor x:Name="pwdTextBox" HorizontalOptions="Fill"/>
        <ExtendedControls:BeautifulOrangeButton x:Name="btnOk" Text="OK"  HorizontalOptions="Fill" Margin ="0,5,0,5" Style="{StaticResource buttonStyle}"/>
    </StackLayout>
</Popup:PopupPage>